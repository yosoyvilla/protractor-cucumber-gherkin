{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "typeScript",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "cucumber"
        ]
    },
    "filesGlob": [
        "./**/*.ts",
        "!./browser.d.ts",
        "!./browser/**/*.ts",
        "!./index.d.ts",
        "!./node_modules/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "typescript"
    ]
}